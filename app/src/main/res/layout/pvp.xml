<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_dark">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/draws_text"
        android:text="@string/draw_games"
        android:textSize="25sp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/player2_text"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="New Game"
        android:id="@+id/new_but"
        android:layout_height="50dp"
        android:layout_width="70dp"
        android:visibility="invisible"
        android:background="?android:attr/colorActivatedHighlight"
        android:layout_alignBottom="@+id/info_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/Info"
        android:layout_marginBottom="130dp"
        android:id="@+id/info_text"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_width="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/new_but">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_0"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_4"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_5"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_6"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_7"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:id="@+id/but_8"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="70sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_marginTop="13dp"
        android:id="@+id/player1_text"
        android:text="@string/player1_score"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_but"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player2_text"
        android:text="@string/player2_score"
        android:textSize="25sp"
        android:layout_marginEnd="17dp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/player1_text"
        android:layout_alignBottom="@+id/player1_text"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
